# Configuración para Render.com
# Estas variables deben configurarse en el dashboard de Render

# ============================================
# SERVIDOR
# ============================================
PORT=10000
HOST=0.0.0.0

# ============================================
# BASE DE DATOS
# ============================================
# Render provee DATABASE_URL automáticamente
# NO configurar manualmente - se obtiene del servicio PostgreSQL conectado

# Configuración de Pool de Conexiones
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ============================================
# SEGURIDAD - PRODUCCIÓN
# ============================================
# CRÍTICO: Generar con: openssl rand -hex 32
SECRET_KEY=tu-secret-key-super-seguro-de-al-menos-32-caracteres
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# APLICACIÓN
# ============================================
APP_NAME=Sistema de Préstamos y Cobranza
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
API_V1_PREFIX=/api/v1

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=*

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=standard

# ============================================
# CARACTERÍSTICAS
# ============================================
FEATURE_NOTIFICACIONES=false
FEATURE_REPORTES_PDF=true
FEATURE_DASHBOARD_KPIS=true
FEATURE_EXPORT_EXCEL=true

# ============================================
# UVICORN
# ============================================
UVICORN_WORKERS=1
UVICORN_TIMEOUT_KEEP_ALIVE=120
UVICORN_TIMEOUT_GRACEFUL_SHUTDOWN=30

# ============================================
# EMAIL (Opcional)
# ============================================
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASSWORD=tu-password
# FROM_EMAIL=tu-email@gmail.com
FROM_NAME=Sistema de Préstamos

# ============================================
# SMS/WHATSAPP (Opcional)
# ============================================
SMS_ENABLED=false
WHATSAPP_ENABLED=false
# TWILIO_ACCOUNT_SID=tu-sid
# TWILIO_AUTH_TOKEN=tu-token
# TWILIO_PHONE_NUMBER=+1234567890
# TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ============================================
# NOTIFICACIONES
# ============================================
DIAS_PREVIOS_RECORDATORIO=3
DIAS_MORA_ALERTA=15

# ============================================
# REPORTES
# ============================================
REPORTS_DIR=/tmp/reports
REPORTS_CACHE_ENABLED=true
REPORTS_CACHE_TTL=1800

# ============================================
# UPLOADS
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# ============================================
# PAGINACIÓN
# ============================================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# ============================================
# CACHE
# ============================================
HEALTH_CHECK_CACHE_DURATION=30
CACHE_EXPIRE_SECONDS=3600

# ============================================
# REGLAS DE NEGOCIO
# ============================================
TASA_INTERES_BASE=15.0
TASA_MORA=2.0
TASA_MORA_DIARIA=0.1
MAX_CUOTA_PERCENTAGE=40
MONTO_MINIMO_PRESTAMO=100.0
MONTO_MAXIMO_PRESTAMO=50000.0
PLAZO_MINIMO_MESES=1
PLAZO_MAXIMO_MESES=60
TOLERANCIA_CONCILIACION=0.50