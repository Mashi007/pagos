# Base de datos PostgreSQL (Railway la provee automáticamente)
DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Configuración de la aplicación
ENVIRONMENT=production
PORT=8000

# Seguridad - CAMBIAR EN PRODUCCIÓN
SECRET_KEY=genera-un-secret-key-seguro-aqui
ALGORITHM=HS256

# CORS - Frontend URL (opcional)
FRONTEND_URL=https://tu-frontend.railway.app

# WhatsApp Business API (opcional)
WHATSAPP_API_TOKEN=tu_token
WHATSAPP_PHONE_ID=tu_phone_id
WHATSAPP_BUSINESS_ID=tu_business_id
VERIFY_TOKEN=tu_verify_token

# OpenAI API (opcional)
OPENAI_API_KEY=sk-tu_key

# Email SMTP (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password
EMAIL_FROM=noreply@tudominio.com

# Notificaciones (opcional)
NOTIFICACIONES_ACTIVAS=false
