{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd pagos && npm ci && npm run build",
    "watchPatterns": ["pagos/**"]
  },
  "deploy": {
    "startCommand": "cd pagos && npm run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
