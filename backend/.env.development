# .env.development - Desarrollo Local
# ============================================
# COPIADO DESDE .env.example
# Configuración optimizada para desarrollo
# ============================================

# ============================================
# SERVIDOR
# ============================================
PORT=8000
HOST=127.0.0.1

# ============================================
# BASE DE DATOS - DESARROLLO LOCAL
# ============================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prestamos_dev
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=true

# ============================================
# SEGURIDAD - DESARROLLO
# ============================================
SECRET_KEY=dev-secret-key-not-for-production-change-this-12345678901234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS - Desarrollo
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Rate Limiting - Deshabilitado en dev
RATE_LIMIT_ENABLED=false

# ============================================
# APLICACIÓN - DESARROLLO
# ============================================
APP_NAME=Sistema de Préstamos y Cobranza [DEV]
APP_VERSION=1.0.0-dev
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1

# ============================================
# MONITOREO - DESARROLLO
# ============================================
# Sentry deshabilitado en desarrollo
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# ============================================
# LOGGING - DESARROLLO
# ============================================
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# ============================================
# REDIS - DESARROLLO (Opcional)
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# ============================================
# UVICORN - DESARROLLO
# ============================================
UVICORN_WORKERS=1
UVICORN_TIMEOUT_KEEP_ALIVE=120
UVICORN_TIMEOUT_GRACEFUL_SHUTDOWN=30

# ============================================
# HEALTH CHECK
# ============================================
HEALTH_CHECK_CACHE_DURATION=5

# ============================================
# BUILD
# ============================================
PYTHONUNBUFFERED=1

# ============================================
# EMAIL - DESARROLLO (MailHog/Mailtrap)
# ============================================
# Usar MailHog local: docker run -p 1025:1025 -p 8025:8025 mailhog/mailhog
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@localhost
SMTP_FROM_NAME=Sistema Dev
EMAIL_ENABLED=false

# ============================================
# TWILIO - DESARROLLO (Deshabilitado)
# ============================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
SMS_ENABLED=false
WHATSAPP_ENABLED=false

# ============================================
# SCHEDULED TASKS - DESARROLLO
# ============================================
ENABLE_SCHEDULER=false

# ============================================
# BUSINESS RULES - DESARROLLO
# ============================================
TASA_MORA_DIARIA=0.1
MAX_CUOTA_PERCENTAGE=40
MIN_LOAN_AMOUNT=100000
MAX_LOAN_AMOUNT=100000000
MAX_LOAN_TERM=120

# ============================================
# FILE UPLOADS - DESARROLLO
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.xlsx,.xls
UPLOAD_DIR=./uploads

# ============================================
# REPORTES - DESARROLLO
# ============================================
REPORTS_DIR=./reports
REPORTS_CACHE_ENABLED=false

# ============================================
# FRONTEND - DESARROLLO
# ============================================
FRONTEND_URL=http://localhost:3000
FRONTEND_ADMIN_URL=http://localhost:3001

# ============================================
# BACKUP - DESARROLLO
# ============================================
BACKUP_ENABLED=false

# ============================================
# PERFORMANCE - DESARROLLO
# ============================================
DB_QUERY_TIMEOUT=60
COMPRESSION_ENABLED=false

# ============================================
# SECURITY - DESARROLLO
# ============================================
SECURITY_HEADERS_ENABLED=false

# ============================================
# FEATURE FLAGS - DESARROLLO (Todo habilitado)
# ============================================
FEATURE_NOTIFICACIONES=true
FEATURE_REPORTES_PDF=true
FEATURE_DASHBOARD_KPIS=true
FEATURE_EXPORT_EXCEL=true
FEATURE_PRESTAMOS_GRUPALES=true
