[flake8]
# Configuración de flake8 para el proyecto

# Longitud máxima de líneas
max-line-length = 120

# Excluir directorios y archivos
exclude = 
    migrations,
    alembic/versions,
    __pycache__,
    *.pyc,
    .git,
    venv,
    env,
    .venv,
    node_modules,
    build,
    dist,
    backend/tests

# Ignorar errores específicos
# E203: whitespace before ':' (conflicto con black)
# E501: line too long (ya controlado por max-line-length)
# W503: line break before binary operator (conflicto con black)
# F401: imported but unused (puede ser intencional)
# F403: 'from module import *' used (a veces necesario en __init__.py)
ignore = E203, E501, W503, F401, F403

# Permitir imports no utilizados en __init__.py
per-file-ignores =
    __init__.py:F401,F403
    */tests/*:F401,F403
    */test_*.py:F401,F403
    alembic/versions/*:F401,F403

# Estadísticas
statistics = True
count = True

# Mostrar código fuente en errores
show-source = True

# Extensión de archivos
extend-ignore = 

