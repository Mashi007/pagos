# .env.example - NO incluir valores reales, solo plantilla

# Base de datos (en local usa Docker o Postgres local)
DATABASE_URL=postgresql://user:password@localhost:5432/pagos_db

# Entorno
ENVIRONMENT=development

# Seguridad (genera tus propias claves)
SECRET_KEY=genera_tu_clave_con_secrets_token_urlsafe
JWT_SECRET_KEY=genera_otra_clave_diferente
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Aplicación
APP_NAME=Sistema de Pagos
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Base de datos - Pool de conexiones
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Logging
LOG_LEVEL=DEBUG

# CORS (en desarrollo permite todo)
ALLOWED_ORIGINS=*

# Puerto (Railway lo sobreescribe automáticamente)
PORT=8000
HOST=0.0.0.0
