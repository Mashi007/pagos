# ============================================
# CONFIGURACIÓN DEL SISTEMA DE PAGOS
# ============================================

# ============================================
# Configuración General
# ============================================
DEBUG=False
PROJECT_NAME="Sistema de Pagos"
VERSION="1.0.0"

# ============================================
# Base de Datos PostgreSQL
# ============================================
# Local: postgresql://usuario:password@localhost:5432/pagos_db
# Render: usar la "External Database URL" del dashboard (postgresql://...@host:5432/pagos_db_zjer)
DATABASE_URL=postgresql://usuario:password@localhost:5432/pagos_db

# ============================================
# Seguridad - JWT
# ============================================
SECRET_KEY=tu-clave-secreta-super-segura-aqui-cambiar-en-produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# WhatsApp / Meta Business API
# ============================================
# Token de verificación para el webhook (debe coincidir con el configurado en Meta)
WHATSAPP_VERIFY_TOKEN=tu_token_de_verificacion_aqui

# Access Token de WhatsApp Business API (obtenido de Meta Developers)
WHATSAPP_ACCESS_TOKEN=tu_access_token_de_meta_aqui

# Phone Number ID de WhatsApp Business (obtenido de Meta Developers)
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id_aqui

# Business Account ID de WhatsApp (opcional)
WHATSAPP_BUSINESS_ACCOUNT_ID=tu_business_account_id_aqui

# ============================================
# Email (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion
SMTP_FROM_EMAIL=tu_email@gmail.com

# Contactos para notificación automática de tickets CRM (emails separados por coma).
# También configurable en Configuración > Email > "Contactos para notificación de tickets".
TICKETS_NOTIFY_EMAIL=soporte@empresa.com,gerencia@empresa.com

# ============================================
# AI / OpenRouter (Configuración > tab AI)
# ============================================
# La clave NUNCA se expone al frontend; se usa solo en el backend.
# Obtener en: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-tu-clave-aqui

# Modelo por defecto (opcional). Ver: https://openrouter.ai/docs/guides/overview/models
OPENROUTER_MODEL=openai/gpt-4o-mini

# ============================================
# Redis (Cache - Opcional)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Sentry (Monitoreo - Opcional)
# ============================================
SENTRY_DSN=tu_sentry_dsn_aqui

# ============================================
# CORS
# ============================================
# Formato JSON o separado por comas
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
# O alternativamente:
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
