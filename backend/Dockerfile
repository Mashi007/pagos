FROM python:3.11-slim

# Variables de entorno para optimizaci√≥n
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    postgresql-client \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copiar requirements desde backend/
COPY backend/requirements/ ./requirements/
COPY backend/requirements.txt .

# Instalar dependencias Python
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo de la aplicaci√≥n desde backend/
COPY backend/ .

# Crear usuario no-root
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app

USER appuser

# Railway asigna PORT din√°micamente
EXPOSE 8000

# Comando de inicio con migraciones autom√°ticas
CMD ["sh", "-c", "\
    echo 'üöÄ Iniciando aplicaci√≥n...' && \
    echo 'üìä Ejecutando migraciones de base de datos...' && \
    alembic upgrade head && \
    echo '‚úÖ Migraciones completadas' && \
    echo 'üåê Iniciando servidor en puerto ${PORT:-8000}...' && \
    uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000} --log-level info\
"]
